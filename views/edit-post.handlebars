<form id="edit-post-form">
    <div class="card blog-post">
        <div class="card-header blog-post-header">
            Edit Post
        </div>
        <div class="card-body blog-post-text">
            <div class="form-group">
                <input type="hidden" id="post_id" value="{{post.id}}" />
                <label for="title">Title</label>
                <input type="text" class="form-control" id="title" value="{{post.title}}" />
            </div>
            <div class="form-group">
                <label for="content">Content</label>
                <textarea class="form-control" id="content" rows="3">{{post.content}}</textarea>
            </div>
            <div>
                <button type="submit" class="btn btn-secondary submit-button">Update Post</button>
                <button id="delete-post-btn" type="button" class="btn btn-secondary delete-post-btn">Delete Post</button>
            </div>
        </div>
    </div>
</form>
<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>